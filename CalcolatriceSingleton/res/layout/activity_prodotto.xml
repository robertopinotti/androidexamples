<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonPiuUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        android:text="+1"
        android:textSize="30sp"
        android:onClick="piuUno" />

    <Button
        android:id="@+id/buttonPiuDieci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPiuUno"
        android:layout_centerHorizontal="true"
        android:text="+10"
        android:textSize="30sp"
        android:onClick="piuDieci" />

    <Button
        android:id="@+id/prodotto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPiuDieci"
        android:layout_centerHorizontal="true"
        android:text="vai a prodotto"
        android:textSize="30sp"
        android:onClick="prodotto" />

</RelativeLayout>